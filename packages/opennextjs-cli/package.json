{
  "name": "@jsonbored/opennextjs-cli",
  "version": "0.1.0",
  "description": "Interactive CLI/TUI tool for setting up and configuring OpenNext.js projects for Cloudflare Workers",
  "type": "module",
  "bin": {
    "opennextjs-cli": "./dist/index.js",
    "onjs": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "default": "./dist/schemas/index.js"
    },
    "./platforms/cloudflare": {
      "types": "./dist/platforms/cloudflare/index.d.ts",
      "default": "./dist/platforms/cloudflare/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "changelog:generate": "git-cliff --config ../../cliff.toml --tag v$(node -p \"require('./package.json').version\")",
    "changelog:preview": "git-cliff --config ../../cliff.toml --latest --unreleased",
    "bump:major": "tsx ../../scripts/bump-version.ts major",
    "bump:minor": "tsx ../../scripts/bump-version.ts minor",
    "bump:patch": "tsx ../../scripts/bump-version.ts patch"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@opennextjs/cloudflare": "^1.14.7",
    "commander": "^14.0.2",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.7",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "opennextjs",
    "opennext",
    "nextjs",
    "cloudflare",
    "workers",
    "cli"
  ],
  "author": "JSONbored",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JSONbored/opennextjs-cli",
    "directory": "packages/opennextjs-cli"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
